@code {

	private bool direction = true;
	private double boxPosX = 0;
	private DateTime dt = DateTime.Now;

	protected override async Task OnInitializedAsync()
	{
		var t = new PeriodicTimer(TimeSpan.FromMicroseconds(1000000/90));

		DateTime pre = DateTime.Now;
		DateTime cur = DateTime.Now;

		while(await t.WaitForNextTickAsync())
		{
			if(2 < boxPosX) direction = false;
			else if (boxPosX < 0) direction = true;

			if(direction) boxPosX += 0.01;
			else boxPosX -= 0.01;

			cur = DateTime.Now;
			TimeSpan ts = cur - pre;
			Console.WriteLine($"ts={1000000 / ts.Microseconds} boxPosX={boxPosX}");
			pre = DateTime.Now;

			StateHasChanged();
		}
	}
}