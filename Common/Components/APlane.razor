<a-plane sq-collider color="@Color" position="@P" rotation="@R" width="@WH.Width" height="@WH.Height" material="opacity: @Opacity; side: double;" />

@code
{
	[Parameter]
	public string? Color { get; set; }

	[Parameter]
	public double Opacity { get; set; }

	[Parameter]
	public Base.Position P { get; set; }

	[Parameter]
	public Base.Rotation R { get; set; }

	[Parameter]
	public Base.WidthHeight WH { get; set; }

	public APlane() { P = new(); R = new(); WH = new(); }

	public APlane(string? color = null, double opacity = 1.0,
		double posX = 0, double posY = 0, double posZ = 0,
		double rotX = 0, double rotY = 0, double rotZ = 0,
		double width = 1, double height = 1)
	{
		Color = color;
		Opacity = opacity;
		P = new(posX,posY,posZ);
		R = new(rotX,rotY,rotZ);
		WH = new(width,height);
	}
}
