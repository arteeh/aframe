@inherits AEntity

@if(Collider)
{
	<a-entity sq-nonconvexcollider="recursive: true" gltf-model="@GLTFHref" position="@Pos" rotation="@Rot" scale="@Scl"></a-entity>
}
else
{
	<a-entity gltf-model="@GLTFHref" position="@Pos" rotation="@Rot" scale="@Scl"></a-entity>
}

@code {

	[Parameter]
	public string GLTFHref { get; set; } = "";

	[Parameter]
	public bool Collider { get; set; } = true;

	public AModel() {}

	public AModel(string gltfHref, bool collider = true,
		double posX = 0, double posY = 0, double posZ = 0, double rotX = 0, double rotY = 0, double rotZ = 0, double sclX = 1, double sclY = 1, double sclZ = 1) : base(posX,posY,posZ,rotX,rotY,rotZ,sclX,sclY,sclZ)
	{
		GLTFHref = gltfHref;
		Collider = collider;
	}

}
