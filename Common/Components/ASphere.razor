<a-entity sq-collider geometry="primitive: sphere" material="color: @Color; opacity: @Opacity;" position="@P" width="@WH.Width" height="@WH.Height" />

@code {

	[Parameter]
	public string? Color { get; set; } = null;

	[Parameter]
	public double Opacity { get; set; } = 1.0;

	private Base.Position P;
	private Base.WidthHeight WH;

	public ASphere() { P = new(); WH = new(); }

	public ASphere(string? color = null, double opacity = 1.0,
		double posX = 0, double posY = 0, double posZ = 0,
		double width = 1, double height = 1)
	{
		Color = color;
		Opacity = opacity;
		P = new(posX,posY,posZ);
		WH = new(width,height);
	}

}
