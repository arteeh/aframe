	public AEntity() {}

	public AEntity(double posX, double posY, double posZ, double rotX, double rotY, double rotZ, double sclX, double sclY, double sclZ)
	{
		PosX = posX;
		PosY = posY;
		PosZ = posZ;
		RotX = rotX;
		RotY = rotY;
		RotZ = rotZ;
		SclX = sclX;
