	[Parameter]
	public double PosY { get; set; } = 0;
	[Parameter]
	public double PosZ { get; set; } = 0;

	[Parameter]
	public double RotX { get; set; } = 0;
	[Parameter]
	public double RotY { get; set; } = 0;
	[Parameter]
	public double RotZ { get; set; } = 0;

