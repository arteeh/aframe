<a-link title="@Title" href="@Href" image="@ImageHref" position="@P" rotation="@R" />

@code {

	[Parameter]
	public string Title { get; set; } = "TODO_PORTAL_NAME";

	[Parameter]
	public string Href { get; set; } = "https://sq-community-hub.glitch.me";

	[Parameter]
	public string ImageHref { get; set; } = "https://logo.clearbit.com/sidequestvr.com";

	private Base.Position P;
	private Base.Rotation R;

	public ALink() { P = new(); R = new(); }

	public ALink(string title, string href, string imageHref,
		double posX = 0, double posY = 0, double posZ = 0,
		double rotX = 0, double rotY = 0, double rotZ = 0)
	{
		Title = title;
		Href = href;
		ImageHref = imageHref;
		P = new(posX,posY,posZ);
		R = new(rotX,rotY,rotZ);
	}

}
