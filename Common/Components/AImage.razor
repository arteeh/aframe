<a-image src="@ImagePath" position="@P" rotation="@R" width="@WH.Width" height="@WH.Height" />

@code {

	[Parameter]
	public string ImagePath { get; set; } = "";

	private Base.WidthHeight WH;
	private Base.Position P;
	private Base.Rotation R;

	public AImage() { P = new(); R = new(); WH = new(); }

	public AImage(string imagePath,
		double posX = 0, double posY = 0, double posZ = 0,
		double rotX = 0, double rotY = 0, double rotZ = 0,
		double width = 1, double height = 1)
	{
		ImagePath = imagePath;
		P = new(posX,posY,posZ);
		R = new(rotX,rotY,rotZ);
		WH = new(width,height);
	}
}
